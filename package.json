    "css-loader": "^3.2.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "pm2": "^3.5.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
